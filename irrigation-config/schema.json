{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "1",
    "title": "Timer Config",
    "description": "An Irrigation system timer configuration",
    "type": "object",
    "required": [
        "configId",
        "name",
        "gpioPins",
        "timeout",
        "zones"
    ],
    "properties": {
        "configId": {
            "title": "Configuration ID",
            "description": "The unique identifier for a config",
            "type": "string"
        },
        "name": {
            "title": "Configuration Name",
            "description": "Name of the configuration",
            "type": "string"
        },
        "gpioPins": {
            "description": "GPIO pins used in the config",
            "type": "array",
            "items": {
                "enum": [
                    3,
                    5,
                    7,
                    26,
                    10,
                    12,
                    11,
                    13,
                    15,
                    16,
                    18,
                    19,
                    21,
                    22,
                    24,
                    23
                ]
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "timeout": {
            "type": "string",
            "title": "Timeout",
            "description": "Timeout between each Section",
            "format": "duration"
        },
        "zones": {
            "type": "array",
            "title": "Zones",
            "minItems": 1,
            "items": {
                "title": "Zone",
                "description": "A Zone in the timer",
                "type": "object",
                "required": [
                    "name",
                    "sections"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "title": "Zone name",
                        "description": "A Zone's name"
                    },
                    "sections": {
                        "title": "Sections",
                        "description": "Sections in a zone",
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "object",
                            "title": "Section",
                            "description": "A section name, pin and duration",
                            "required": [
                                "name",
                                "pin",
                                "duration"
                            ],
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "title": "Section name",
                                    "description": "A Section's name"
                                },
                                "pin": {
                                    "enum": [
                                        3,
                                        5,
                                        7,
                                        26,
                                        10,
                                        12,
                                        11,
                                        13,
                                        15,
                                        16,
                                        18,
                                        19,
                                        21,
                                        22,
                                        24,
                                        23
                                    ],
                                    "title": "Pin",
                                    "description": "A Section's pin number"
                                },
                                "duration": {
                                    "type": "string",
                                    "title": "Duration",
                                    "description": "A Section's duration timedelta",
                                    "format": "duration"
                                }
                            }
                        }
                    },
                    "pump": {
                        "type": "object",
                        "title": "Pump",
                        "description": "A Pump object",
                        "required": [
                            "pin",
                            "initTime",
                            "name"
                        ],
                        "properties": {
                            "name": {
                                "type": "string",
                                "title": "Pump name",
                                "description": "A Pump's name"
                            },
                            "pin": {
                                "enum": [
                                    3,
                                    5,
                                    7,
                                    26,
                                    10,
                                    12,
                                    11,
                                    13,
                                    15,
                                    16,
                                    18,
                                    19,
                                    21,
                                    22,
                                    24,
                                    23
                                ],
                                "title": "Pin",
                                "description": "A Pump's pin number"
                            },
                            "initTime": {
                                "type": "string",
                                "title": "Initialization Time",
                                "description": "Number of Seconds before the pump starts",
                                "format": "duration"
                            }
                        }
                    }
                }
            }
        }
    }
}